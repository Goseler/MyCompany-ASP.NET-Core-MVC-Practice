@model IQueryable<NewsMessage>

<h3>Рецензии новостей</h3>
@if (Model.Any())
{
    <div>
        @foreach (NewsMessage entity in Model)
        {
            <div>
                <a asp-area="Admin" asp-controller="NewsReviews" asp-action="Review" asp-route-id="@entity.Id">
                    @($"{entity.Title}")
                </a>
                <br />

                <a class="div-box" asp-area="Admin" asp-controller="NewsReviews" asp-action="Review" asp-route-id="@entity.Id">Просмотреть</a>

                <form style="display: inline-block;" id="form-@entity.Id" asp-area="Admin" asp-controller="NewsReviews" asp-action="Delete" method="post">
                    <input type="hidden" name="id" value="@entity.Id" />
                    <a href="#" onclick="document.getElementById('form-@entity.Id').submit();">Удалить</a>
                </form>

                <br /><br />
            </div>
        }
    </div>
}